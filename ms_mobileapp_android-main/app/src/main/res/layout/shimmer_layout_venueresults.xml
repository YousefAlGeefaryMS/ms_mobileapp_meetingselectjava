<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmerlayout_recyclerview_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/search_engine_shape">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shimmerlayout_image_venuedetailsrooms"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:background="@color/shimmerlayoutcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.TopRLCut" />

    <TextView
        android:id="@+id/shimmerlayout_name_venuedetailsrooms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"

        android:background="@color/shimmerlayoutcolor"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/meetingSelectBlue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/shimmerlayout_address_venuedetailsrooms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerlayout_image_venuedetailsrooms" />

    <TextView
        android:id="@+id/shimmerlayout_address_venuedetailsrooms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmerlayoutcolor"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/shimmerlayout_moreInfo_venueResults"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerlayout_name_venuedetailsrooms" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmerlayout_constraintLayout_constraintlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/shimmerlayoutcolor"
        android:background="@drawable/instantbookable_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerlayout_address_venuedetailsrooms">

        <ImageView
            android:id="@+id/shimmerlayout_instantimg_venueresults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:background="@color/shimmerlayoutcolor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/purple"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:id="@+id/shimmerlayout_instantTV_venueresults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Request for Proposal"
            android:textColor="@color/shimmerlayoutcolor"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shimmerlayout_instantimg_venueresults"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/shimmerlayout_moreInfo_venueResults"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/shimmerlayoutcolor"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/grey"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/shimmerlayout_constraintLayout_constraintlayout"
        app:layout_constraintStart_toEndOf="@+id/shimmerlayout_constraintLayout_constraintlayout"
        app:layout_constraintTop_toTopOf="@+id/shimmerlayout_constraintLayout_constraintlayout" />

    <Button
        android:id="@+id/shimmerlayout_booknow_venueresults"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/search_button_bg"
        android:fontFamily="@font/roboto_bold"
        android:text="Book Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shimmerlayout_constraintLayout_constraintlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmerlayout_constraintLayout_constraintlayout" />

    <Button
        android:id="@+id/shimmerlayout_addtocarttbutton_venueresults"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/shimmerlayoutcolor"
        android:background="@drawable/search_button_bg"
        android:fontFamily="@font/roboto_bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shimmerlayout_constraintLayout_constraintlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmerlayout_constraintLayout_constraintlayout" />


</androidx.constraintlayout.widget.ConstraintLayout>